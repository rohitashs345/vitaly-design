{% style %}
  .community-section-wrapper {
    background-color: rgba(var(--color-base-accent-1));
    padding: 0;
  }

  .foursixty-section {
    background-color: rgba(var(--color-base-accent-1));
    max-width: 2600px;
    margin: 0 auto;
  }
  .fs-wrapper {
    padding-right: 10px;
  }

  .community-ticker {
    color: rgba(var(--color-base-background-1));
    padding: 25px 0 25px;
    background-color: rgba(var(--color-base-accent-1));
  }

  .foursixty-section-marquee {
    position: relative;
    overflow: hidden;
    --offset: 20vw;
    --move-initial: calc(-25% + var(--offset));
    --move-final: calc(-50% + var(--offset));
  }

  .foursixty-section-marquee__inner {
    width: fit-content;
    display: flex;
    position: relative;
    transform: translate3d(var(--move-initial), 0, 0);
    animation: foursixty-section-marquee 15s linear infinite;
  }

  .foursixty-section-marquee span {
    padding: 0 60px;
    white-space: nowrap;
  }

  @keyframes foursixty-section-marquee {
    0% {
      transform: translate3d(var(--move-initial), 0, 0);
    }

    100% {
      transform: translate3d(var(--move-final), 0, 0);
    }
  }

  .fs-showcase_v2_5.fs-mobile .fs-entry-container {
    width: calc(50% - 10px) !important;
    padding-top: calc(50% - 10px) !important;
  }

  .fs-showcase_v2_5.fs-desktop .fs-entry-container {
    width: calc(25% - 10px) !important;
    padding-top: calc(25% - 10px) !important;
  }

  .fs-showcase_v2_5.fs-mobile .fs-entry-container,
  .fs-showcase_v2_5.fs-desktop .fs-entry-container {
    border: 1px solid rgba(var(--color-base-background-1));
    margin-left: 10px;
    margin-bottom: 6px;
  }

  .fs-slider_v2_5.fs-desktop .fs-entry-container {
    width: calc(25% - 10px) !important;
    padding-top: calc(25% - 10px) !important;
    margin-left: 10px;
  }

  .foursixty__view-all {
    padding: 5px 0 12px;
  }

  .foursixty__view-all a {
    color: rgba(var(--color-base-background-1));
  }

  .desktop_foursixty_gallery-pdp-slider .fs-slider_v2_5-feed .fs-entry-container {
    border: 1px solid rgba(var(--color-base-background-1));
  }

