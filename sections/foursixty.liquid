{% if section.settings.for_pdp %}
  <script type="lazyload_int">
    setTimeout(function () {
      var pageWidth = document.querySelector('body').scrollWidth;

      var numberOfPosts = document
        .getElementById('foursixty-hideable-container')
        .getElementsByClassName('fs-slider-container')[0]
        .getElementsByClassName('fs-timeline')[0].childElementCount;

      var pdpTicker = document.querySelector('.foursixty-section-marquee__inner-pdp');
      var regTicker = document.querySelector('.foursixty-section-marquee__inner-reg');
      var desktopGridPdp = document.querySelector('.desktop_foursixty_gallery-pdp-grid');
      var desktopSliderPdp = document.querySelector('.desktop_foursixty_gallery-pdp-slider');
      var desktopGridReg = document.querySelector('.desktop_foursixty_gallery');
      var mobileGridReg = document.querySelector('.mobile_foursixty_gallery');
      var mobileGridPdp = document.querySelector('.mobile_foursixty_gallery-pdp-grid');
      var mobileSliderPdp = document.querySelector('.mobile_foursixty_gallery-pdp-slider');

      if (numberOfPosts > 3 && numberOfPosts < 8 && numberOfPosts != 4 && pageWidth >= 770) {
        pdpTicker.style.display = 'flex';
        desktopSliderPdp.style.display = 'block';
      } else if ((numberOfPosts >= 8 && pageWidth >= 770) || (numberOfPosts == 4 && pageWidth >= 770)) {
        pdpTicker.style.display = 'flex';
        desktopGridPdp.style.display = 'block';
      } else if (pageWidth >= 770) {
        regTicker.style.display = 'flex';
        desktopGridReg.style.display = 'block';
      } else if (numberOfPosts >= 2 && pageWidth < 770) {
        pdpTicker.style.display = 'flex';
        mobileGridPdp.style.display = 'block';
      } else {
        regTicker.style.display = 'flex';
        mobileGridReg.style.display = 'block';
      }
    }, 2000);
  </script>
{% endif %}

